# create a ycm config file
ycm_config() {
  ~/.vim/bundle/ycm-generator/config_gen.py $1 -evf
}

# aliases for ruby
alias r='ruby'

# aliases for vim
alias v='vim'
alias wiki='v ~/vimwiki/index.wiki'

# aliases for Tmux
alias tmux='tmux -2'
alias ta='tmux attach -t'
alias tnew='tmux new -s'
alias tls='tmux ls'
alias tkill='tmux kill-session -t'

# editing configs
alias ev='v ~/.vimrc'
alias et='v ~/.tmux.conf'
alias ez='v ~/.zshrc'
alias ea='v ~/.aliases'

# sourcing configs
alias st='tmux source-file ~/.tmux.conf'
alias sz='source ~/.zshrc'

# git (check github.com/robbyrussell/oh-my-zsh/wiki/Cheatsheet)
alias gC='gaa && gcam'
alias gs='g status'
alias gt='g tree'
alias tree='gt'

# compiler/debugger
alias gdb='gdb -q'

# directories
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../'
alias ......='cd ../../../../'
alias desktop='cd ~/Desktop'

# list
alias ll='ls -alhF'
alias la='ls -A'
alias l='ls -CF'

# searching
alias gg='grep -rn . -e'
# alias ff='find . -type f -name'

# tar
alias tarc="tar czvf"
alias tarx="tar xzvf"
alias untar="tarx"
alias tart="tar tzvf"

# jekyll
alias jekyll_show='bundle exec jekyll serve --watch'

# other!
alias dog='cat'
alias meow='cat'
alias please='sudo'
alias agu='sudo apt-get update'
alias agi='sudo apt-get install'

# restart network-manager
alias re-net='sudo service network-manager restart'

# confirmation
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'

# shutdown
alias shutdown='sudo shutdown now -h'

# clear
alias c='clear'

# nmap
alias ns='sudo nmap -sn 192.168.1.0/24'

# ping
alias ping='ping -c 5'
alias fastping='ping -c 100 -s.2'
alias p8='ping 8.8.8.8'

# memory/cpu/gpu info
alias meminfo='free -m -l -t'
alias cpuinfo='lscpu'
alias gpumeminfo='grep -i --color memory /var/log/Xorg.0.log'
 
# top process eating memory
alias psmem='ps auxf | sort -nr -k 4'
alias psmem10='ps auxf | sort -nr -k 4 | head -10'
 
# top process eating cpu
alias pscpu='ps auxf | sort -nr -k 3'
alias pscpu10='ps auxf | sort -nr -k 3 | head -10'
